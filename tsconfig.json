{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./lib",
    "jsx": "react-jsx",
    "lib": ["es2020", "dom"],
    "paths": {
      "~*": ["./*"]
    },
    "skipLibCheck": true,
    "types": [
      "flat",
      "jest-fetch-mock",
      "jest",
      "linkifyjs",
      "node",
      "prop-types",
      "react-dom",
      "react"
    ]
  },
  "include": ["lib/**/*", "./jest.config.ts", "./jest.setup.ts"]
}
